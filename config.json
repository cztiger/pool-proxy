{
	"//": "将要连接的矿池标识",
	"name": "main",
	"//": "线程数量",
	"threads": 2,
	"//": "检查矿池连通状况间隔时间",
	"poolCheckInterval": "5s",
	"//": "调试开关",
	"debug": true,

	"server": {
		"//": "侦听端口",
		"listen": "0.0.0.0:8008",
		"//": "超时设定",
		"timeout": "120s",
		"//": "最大连接数量",
		"maxConn": 8192,
		"//": "是否启用ssl",
		"tls" : true,
		"//": "ssl->crt",
		"certFile": "./certs/server.crt",
		"//": "ssl->key",
		"keyFile": "./certs/server.key"
	},

	"pool": [
		{
			"//": "矿池标识",
			"name": "main",
			"address": "stratum+ssl://us1.ethermine.org:5555",
			"timeout": "10s"
		}
	]
}